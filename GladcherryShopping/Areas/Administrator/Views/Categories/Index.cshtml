@model DataLayer.ViewModels.PagerViewModel.PagerViewModels<DataLayer.Models.Category>
@using MvcPager
@{
    ViewBag.Title = "لیست دسته بندی ها";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>مدیریت دسته بندی ها</h2>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>لیست دسته بندی ها</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">گزینه 1</a>
                            </li>
                            <li>
                                <a href="#">گزینه 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <h4> &nbsp; &nbsp; افزودن دسته بندی جدید &nbsp; &nbsp; <a class="btn btn-success" href="/Administrator/Categories/Create"> <span style="font-weight:bold;font-size:18px" class="glyphicon glyphicon-plus"></span> افزودن دسته بندی &nbsp;</a></h4>
                    <hr />
                    <div class="ibox-content table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        آیکون دسته
                                    </th>
                                    <th>
                                        نام دسته بندی پدر
                                    </th>
                                    <th>
                                        نام فارسی دسته بندی
                                    </th>
                                    <th>
                                        نام لاتین دسته بندی
                                    </th>
                                    <th>
                                        تعداد محصولات این دسته
                                    </th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.data)
                                {
                                    <tr>
                                        <td>
                                            <i style="font-size:24px;" class="fa fa-@item.Icon" aria-hidden="true"></i>
                                        </td>
                                        <td>
                                            @if (item.Parent != null)
                                            {
                                                <span>@item.Parent.PersianName</span>
                                            }
                                            else
                                            {
                                                <span style="color:darkred"> دسته اصلی </span>
                                            }
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PersianName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EnglishName)
                                        </td>
                                        <td style="text-align:center">
                                            @{
                                                var y = 0;
                                                if (item.Products != null)
                                                {
                                                    y = item.Products.Count();
                                                }
                                            }
                                            @y.ToString()
                                        </td>
                                        <td>
                                            @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" }) |
                                            @Html.ActionLink("جزییات", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-xs" }) |
                                            @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
                                        </td>
                                    </tr>
                                                }
                            </tbody>
                        </table>
                        <div class="row">
                            <div class="col-md-6" style="direction: ltr">
                                <ul class="pagination pagination-sm">
                                    <li>@Html.Pager(10, Model.CurrentPage, Model.TotalItemCount)</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
