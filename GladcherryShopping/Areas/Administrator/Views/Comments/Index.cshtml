@model DataLayer.ViewModels.PagerViewModel.PagerViewModels<DataLayer.Models.Comment>
@using MvcPager
@{
    ViewBag.Title = "لیست نظرات";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>مدیریت نظرات</h2>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>لیست نظرات</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">گزینه 1</a>
                            </li>
                            <li>
                                <a href="#">گزینه 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="ibox-content table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        نام کاریر
                                    </th>
                                    <th>
                                        محصول مرتبط
                                    </th>
                                    <th>
                                        تایید
                                    </th>
                                    <th>
                                        زمان
                                    </th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.data)
                                {
                                    <tr>
                                        @if (item.User != null && item.User.FirstName != null && item.User.LastName != null)
                                        {
                                            <td>
                                                <span>@item.User.FirstName @item.User.LastName</span>
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                <span>@item.Fullname</span>
                                            </td>
                                        }
                                        <td>
                                            <a target="_blank" href="/Administrator/Products/Details/@item.ProductId"> @Html.DisplayFor(modelItem => item.Product.PersianName)</a>
                                        </td>
                                        <td>
                                            @if (item.IsApprove == false)
                                            {
                                                <span>تایید نشده</span>
                                            }
                                            else
                                            {
                                                <span>تایید شده</span>
                                            }
                                        </td>
                                        <td>
                                            <span>@GladCherryShopping.Helpers.FunctionsHelper.GetPersianDateTime(item.DateTime,true,true)</span>
                                        </td>
                                        <td>
                                            @*@Html.ActionLink("تایی", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" }) |*@
                                            @Html.ActionLink("جزییات", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-xs" }) |
                                            @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="row">
                            <div class="col-md-6" style="direction: ltr">
                                <ul class="pagination pagination-sm">
                                    <li>@Html.Pager(10, Model.CurrentPage, Model.TotalItemCount)</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
