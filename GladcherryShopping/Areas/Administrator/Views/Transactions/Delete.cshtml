@model DataLayer.Models.Transaction

@{
    ViewBag.Title = "حذف تراکنش";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>مدیریت تراکنش ها</h2>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5> آیا از حذف این تراکنش با کد <span style="color:darkred"> @Model.Id </span> اطمینان دارید ؟ </h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">گزینه 1</a>
                            </li>
                            <li>
                                <a href="#">گزینه 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div>
                        @*<h4>HubSYS Software Application 2016-2017</h4>
                            <hr />*@
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.Date)
                            </dt>

                            <dd>
                                @GladCherryShopping.Helpers.FunctionsHelper.GetPersianDateTime(Model.Date, true, true)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.InvoiceNumber)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.InvoiceNumber)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.BankName)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.BankName)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.RecievedDocumentNumber)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.RecievedDocumentNumber)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.RecievedDocumentDate)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.RecievedDocumentDate)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.CardNumber)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.CardNumber)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.TerminalNumber)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.TerminalNumber)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Acceptor)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Acceptor)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.OperationResult)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.GetOperationResult)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.AcceptorPostalCode)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.AcceptorPostalCode)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.AcceptorPhoneNumber)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.AcceptorPhoneNumber)
                            </dd>

                        </dl>
                    </div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="حذف" class="btn btn-danger btn-md" /> |
                            @Html.ActionLink("بازگشت به لیست", "Index", null, new { @class = "btn btn-default btn-md" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
