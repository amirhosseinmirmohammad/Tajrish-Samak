<div class="container">
    <div class="content">
        @if (TempData["NotFound"] != null)
            {
            <div class="notfound" style="direction:rtl !important;">
                <a style="color:#000000;" href="/Blog/All">@TempData["NotFound"]</a>
            </div>
        }
        @foreach (var item in Model.data)
            {
            <a href="~/Blog/@item.Id/@item.SefUrl" title="@item.Title">
                @if (item.Images.Count > 0)
                {
                    <img src="@Url.Content(item.Images.Where(current => current.Extension.Contains("jpeg") || current.Extension.Contains("gif") || current.Extension.Contains("png") || current.Extension.Contains("jpg")).FirstOrDefault().FullPath)" class="img-responsive" alt="@item.Title" title="@item.Title" />
                }
                else
                {
                    <img src="~/Content/Blog/img2.jpg" class="img-responsive" alt="رمانتا | برترین خرمای ایرانی" title="رمانتا | برترین خرمای ایرانی" />
                }
            </a>
            <i class="aeroplane"> </i>
            <div class="travelling">
                <div class="col-md-10 travelling1">
                    <h2><a href="~/Blog/@item.Id/@item.SefUrl">@item.Title</a></h2>
                    <h5>@GladCherryShopping.Helpers.FunctionsHelper.GetPersianDateTime((DateTime)item.CreateDate, false, false)</h5>
                    <p>@item.ShortDesc</p>
                </div>
                <div class="col-md-1 travelling2">
                    <h3 class="number">@item.Survey</h3>
                    <a href="#">بازدید ها</a>
                </div>
                <div class="clearfix"> </div>
            </div>
