@model DataLayer.ViewModels.PagerViewModel.PagerViewModels<DataLayer.Models.Discount>
@using MvcPager
@{
    ViewBag.Title = "لیست تخفیف ها";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>مدیریت تخفیف ها</h2>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>لیست تخفیف ها</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">گزینه 1</a>
                            </li>
                            <li>
                                <a href="#">گزینه 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <h4> &nbsp; &nbsp; افزودن تخفیف جدید &nbsp; &nbsp; <a class="btn btn-success" href="/Administrator/Discounts/Create"> <span style="font-weight:bold;font-size:18px" class="glyphicon glyphicon-plus"></span> افزودن کد &nbsp;</a></h4>
                    <h4> &nbsp; &nbsp; تعیین وضعیت کدهای تخفیف &nbsp; &nbsp; <a class="btn btn-danger" href="/Administrator/Discounts/Situation"> <span style="font-weight:bold;font-size:18px" class="glyphicon glyphicon-signal"></span> تعیین وضعیت &nbsp;</a></h4>
                    <br />
                    <hr />
                    <div class="ibox-content table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        عنوان
                                    </th>
                                    <th>
                                        کد
                                    </th>
                                    @*<th>
                                            مربوط به خدمت
                                        </th>*@
                                    <th>
                                        درصدی است ؟
                                    </th>
                                    <th>
                                        سقف سفارش به ریال
                                    </th>
                                    <th>
                                        فعال
                                    </th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.data)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Title)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Code)
                                        </td>
                                        @*<td>
                                                @Html.DisplayFor(modelItem => item.category.PersianName)
                                            </td>*@
                                        @if (item.IsPercentage == true)
                                        {
                                            <td>بله</td>
                                        }
                                        else
                                        {
                                            <td>خیر</td>
                                        }
                                        @if (string.IsNullOrEmpty(item.MaxOrder))
                                        {
                                            <td>نامحدود</td>
                                        }
                                        else
                                        {
                                            <td>@item.MaxOrder</td>
                                        }
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IsActived)
                                        </td>
                                        <td>
                                            @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" }) |
                                            @Html.ActionLink("جزییات", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-xs" }) |
                                            @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="row">
                            <div class="col-md-6" style="direction: ltr">
                                <ul class="pagination pagination-sm">
                                    <li>@Html.Pager(10, Model.CurrentPage, Model.TotalItemCount)</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

